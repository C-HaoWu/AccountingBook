<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent4"
    tools:context=".CreatingActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/food"
                android:layout_width="96dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/food" />

            <ImageView
                android:id="@+id/traffic"
                android:layout_width="96dp"
                android:layout_height="72dp"
                android:textSize="24sp"
                app:srcCompat="@drawable/traffic" />

            <ImageView
                android:id="@+id/clothes"
                android:layout_width="96dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/clothes" />

            <ImageView
                android:id="@+id/life"
                android:layout_width="96dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/life" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/entertainment"
                android:layout_width="96dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/entertiament" />

            <ImageView
                android:id="@+id/ccc"
                android:layout_width="96dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/ccc" />

            <ImageView
                android:id="@+id/medicine"
                android:layout_width="96dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/medicine" />

            <ImageView
                android:id="@+id/others"
                android:layout_width="96dp"
                android:layout_height="72dp"
                app:srcCompat="@drawable/others" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@color/colorAccent5"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="日期"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/create_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="2018-02-28"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="類型"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/create_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="食物"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="內容"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/create_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="早餐"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="金額"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/create_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="$ 55" />

        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/add"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2"
        app:srcCompat="@drawable/add" />

</android.support.constraint.ConstraintLayout>